{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "allowUnreachableCode": false,
    "exactOptionalPropertyTypes": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,

    "isolatedModules": true,

    "checkJs": true,
    "noEmit": true,
    "skipLibCheck": false
  },
  "include": ["./src/*.js"]
}
