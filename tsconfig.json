{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2020",

    "allowUnreachableCode": false,
    "exactOptionalPropertyTypes": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,

    "isolatedModules": true,

    "checkJs": true,
    "noEmit": true,
    "skipLibCheck": false
  },
  "include": ["./src/*.js"]
}
